# Установка базового образа Node.js
FROM node:17

# Установка рабочей директории внутри контейнера
WORKDIR /usr/app

# Копирование package.json и package-lock.json (если есть) для установки зависимостей
COPY package*.json ./

# Установка зависимостей
RUN npm install

# Копирование всего содержимого проекта внутрь контейнера
COPY . .

# Установка порта, на котором будет запущено приложение
EXPOSE 3000

# Команда для запуска приложения при старте контейнера
CMD [ "npm", "run", "start:dev" ]